<style>
.phase{
    color: #515151;
font-size: 0.875rem;
}

.elgg-layout-header > h2{
    line-height: 1.4;
margin-top: 0;
margin-bottom: 0.5rem;
font-size: 2.125rem;
font-weight: 700;
}
.callout.alert, .callout.error {
  background-color: #f2dede;
  border-color: #ebccd1;
  color: #a94442;
}
.callout {
  position: relative;
  margin: 0 0 1rem 0;
  padding: 1rem;
  border: 1px solid rgba(10,10,10,0.25);
    border-top-color: rgba(10, 10, 10, 0.25);
    border-right-color: rgba(10, 10, 10, 0.25);
    border-bottom-color: rgba(10, 10, 10, 0.25);
    border-left-color: rgba(10, 10, 10, 0.25);
  border-radius: 0;
  background-color: white;
  color: #0a0a0a;
}
</style>

<div class="legislation-main">

    <blockquote class="legislation-summary">
        {{data.summary}}
    </blockquote>

    <div class="legislation-text">
        {{data.legislation.description|raw}}
    </div>

</div>

<br>
{% if data.sustainable_goals is iterable %}
    <div class="debates-goals">

        {% for n in data.sustainable_goals %}

            <img src="{{data.site_url}}mod/legislation/graphics/sdg/{{n}}.png" width="80">

        {% endfor %}


    </div>
{% else %}

    <img src="{{data.site_url}}mod/legislation/graphics/sdg/{{data.sustainable_goals}}.png" width="80">

{% endif %}

<div>
    <p>
    <label>Process code:</label>
        <b>{{data.process_code}}</b>
    </p>
</div>
<div class="legislation_draft">
       {% for dr in data.legislation_draft %}
      <p>  
      <iframe src = "{{data.site_url}}/mod/legislation/dependencies/ViewerJS/#{{dr.url}}" width='100%' height='720' allowfullscreen webkitallowfullscreen></iframe>
       
            </p>
       {% endfor %}
    </div>
<br>


<div class="additional-document-link">
          <p>
            <strong>Additional documentation</strong>
          </p>

    {% for ad in data.additional_documentation %}
        <p>   
            <a href="{{ad.url}}">
                <span class="fa fa-file-pdf"></span>
                    {{ad.filename}}
            </a>
        </p>
    {% endfor %}
          

        </div>
        
<br>
 <div class="participation-phase">
    <p>
        <h3>Participation Phase</h3>
    </p>
        <div  class="phase">
        {{data.start_date}} - {{data.end_date}}
        </div>
    </div>

        <br>
        {{data.responses}}
        {% if data.deadline == true %}
        <br>
            <span class="callout notice alert">
            Comments cannot be posted because the participation phase has ended
          </span>
         <br>
        {% endif %}
         <br>