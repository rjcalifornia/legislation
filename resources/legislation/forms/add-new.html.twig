	</div>
    <div class="datetime-pick">
		{{data.start_date_input}}
	</div>
  </div>
  <div class="end">
    <div class="label-end">
		{{data.end_date_label}}
	</div>
    <div class="datetime-pick-end">
		{{data.end_date_input}}
	</div>
  </div>
</div>


