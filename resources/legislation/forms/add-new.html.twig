<style>
.select2-container .select2-selection--single{
     height: 52px !important;
     padding-top: 6px !important;
}

.highlight {
  background: #e7f2fc;
}

.general_info{
	width: 92% !important; 
	padding-left: 2% !important;
	padding-bottom: 3%;
}

.field_set{
	border-bottom: 1px solid #cacaca;
	padding-bottom: 3%;
}
.ui-date{
	width: 50% !important; 
	margin-bottom: 22px;
}
.container {  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  grid-template-rows: 3fr 1fr 1fr;
  gap: 0px 0px;
  grid-auto-flow: row;
  grid-template-areas:
    "label start end"
    ". . ."
    ". . .";
}

.label { grid-area: label;

 }

.start {  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  grid-template-rows: 1fr 1fr 1fr;
  gap: 0px 0px;
  grid-auto-flow: row;
  grid-template-areas:
    "label-start label-start label-start"
    "datetime-pick datetime-pick datetime-pick"
    "datetime-pick datetime-pick datetime-pick";
  grid-area: start;
}

.label-start { grid-area: label-start; padding-left: 6px;}

.datetime-pick { grid-area: datetime-pick; 
padding: 6px;
}

.end {  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  grid-template-rows: 1fr 1fr 1fr;
  gap: 0px 0px;
  grid-auto-flow: row;
  grid-template-areas:
    "label-end label-end label-end"
    "datetime-pick-end datetime-pick-end datetime-pick-end"
    "datetime-pick-end datetime-pick-end datetime-pick-end";
  grid-area: end;
}

.label-end { grid-area: label-end; padding-left: 6px;}

.datetime-pick-end { grid-area: datetime-pick-end;
padding: 6px;
 }

.label-process, .label-start, .label-end{
	font-weight: bold;
}
</style>
